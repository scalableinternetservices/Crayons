<!DOCTYPE html>
<html>
  <head>
    <title>I am a robot</title>
    <%= csrf_meta_tags %>

   <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          <a class="navbar-brand" href="/pages/home">iAMarobot</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Captcha", '/captcha/captcha' %></li>
            <li><a href="/photos">Gallery</a></li>
            <li><%= link_to 'Upload New Image', new_photo_path %></li>

          </ul>
          <ul class="nav navbar-nav navbar-right">

              <% if user_devise_signed_in? %>
                  <li><%= link_to "Profile", profiles_path(@profile) %>
                  <li><%= link_to('Logout', destroy_user_devise_session_path, method: :delete) %></li>

                <% else %>
                  <li><%= link_to('Login', new_user_devise_session_path)  %></li>
                  <li><%= link_to('Register', new_user_devise_registration_path)  %></li>
                <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
  <script src="button.js"></script
</html>
